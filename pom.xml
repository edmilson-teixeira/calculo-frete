<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.com.softplan.sienge.calculofrete</groupId>
	<artifactId>calculo-frete</artifactId>
	<packaging>war</packaging>
	<version>1.0-embedded</version>
	<name>calculo-frete Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<finalName>calculo-frete</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.tomcat.maven</groupId>
					<artifactId>tomcat7-maven-plugin</artifactId>
					<version>2.1</version>

					<configuration>
						<!-- context root for Java web apps -->
						<path>/calculo-frete</path>
						<!-- name of executable jar file -->
						<finalName>calculo-frete.jar</finalName>
					</configuration>

				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
